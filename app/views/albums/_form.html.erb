<% if @album.errors.any? %>
  <ul>
  <% @album.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_with(model: album, local: true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: true} %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :release_year %>
  <%= f.text_field :release_year %>
  <br>
  <%= f.submit %>
<% end %>
